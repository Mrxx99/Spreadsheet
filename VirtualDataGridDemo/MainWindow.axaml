<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:c="clr-namespace:VirtualDataGridDemo.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="VirtualDataGridDemo.MainWindow"
        Width="800" Height="450" WindowStartupLocation="CenterScreen"
        Title="VirtualDataGridDemo">

  <ScrollViewer HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto">
    <c:RowsItemsRepeater Name="RowsItemsRepeater"
                         Items="{Binding $self.Rows}">
      <c:RowsItemsRepeater.Layout>
        <UniformGridLayout MaximumRowsOrColumns="1" Orientation="Horizontal" />
      </c:RowsItemsRepeater.Layout>
      <c:RowsItemsRepeater.ItemTemplate>
        <DataTemplate DataType="c:Row">
          <c:CellsItemsRepeater Name="CellsItemsRepeater"
                                Items="{Binding #RowsItemsRepeater.Columns}"
                                Height="{Binding Height}">
            <c:CellsItemsRepeater.Layout>
              <UniformGridLayout MaximumRowsOrColumns="1" Orientation="Vertical" />
            </c:CellsItemsRepeater.Layout>
            <c:CellsItemsRepeater.ItemTemplate>
              <DataTemplate DataType="c:Column">
                <c:Cell Width="{Binding Width}"
                        Height="{Binding #CellsItemsRepeater.Bounds.Height}" />
              </DataTemplate>
            </c:CellsItemsRepeater.ItemTemplate>
          </c:CellsItemsRepeater>
        </DataTemplate>
      </c:RowsItemsRepeater.ItemTemplate>
    </c:RowsItemsRepeater>
  </ScrollViewer>

</Window>
